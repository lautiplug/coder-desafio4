{{#if products.length}}
  {{#each products }}
  <div style="border: 1px solid black; margin-bottom: 10px; width: 450px;">
    <ul>
      <h1>{{this.name}}</h1>
      <h2>Price: ${{price}}</h2>
      <h3>Description: {{this.description}}</h3>
    </ul>
    <button style="padding: 5px" onclick="deleteProduct('{{this.id}}')">Eliminar</button>
  </div>
  {{/each}}
{{else}}
  <h1>No hay productos</h1>
{{/if}}
